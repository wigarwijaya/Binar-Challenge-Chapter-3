<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/navbar'); %>

    <div class="container-fluid">
      <div class="row">
        <%- include('../partials/sidebar'); %>

        <main role="main" class="col-md-9 ms-sm-auto col-lg-10 pt-3 px-4">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom"
          >
            <h1 class="h2">Edit User Data</h1>
          </div>

          <form method="POST" action="/user/update">
            <div class="mb-3">
              <label class="form-label">Name</label>
              <input
                type="string"
                name="name"
                class="form-control"
                value="<%= user.name %>"
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Email</label>
              <input
                type="string"
                name="email"
                class="form-control"
                value="<%= user.email %>"
              />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input
                  type="password"
                  value="Insert Password"
                  name="password"
                  class="form-control"
                  value="<%= user.password %>"
                />
              </div>

            <div class="mb-3">
              <input
                type="hidden"
                name="id"
                min="1"
                class="form-control"
                value="<%= user.id %>"
              />
            </div>

            <button type="submit" class="btn btn-success">Saved</button>
          </form>
        </main>
      </div>
    </div>

    <%- include('../partials/script'); %>
  </body>
</html>
